{
  "compilerOptions": {
    "composite": true,
  "types": ["vitest/globals", "vite/client"],
  "moduleResolution": "bundler",
    "target": "ES2021",
    "module": "ESNext",
    "lib": ["DOM", "ES2021"],
    "jsx": "react",
  // ...existing code...
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "outDir": "dist",
    "baseUrl": "./",
    "paths": {
      "@vn/core/*": ["../core/src/*"]
    }
  },
  "include": ["src", "*.ts", "*.tsx"],
  "exclude": ["node_modules", "dist"]
}

{
  "name": "visual-novel-engine",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "start": "webpack serve --mode development --open",
    "build": "webpack --mode production",
    "dev": "turbo dev",
    "lint": "eslint . --ext .ts,.tsx",
    "typecheck": "tsc -b --pretty false",
    "test": "vitest run",
    "prepare": "husky install",
    "build:packages": "npm run -w @vn/core build && npm run -w @vn/renderer-web build",
    "dev:zero": "npm run -w chakrahearts-zero dev"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-react": "^7.28.5",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@types/react-native": "^0.72.8",
    "@vitejs/plugin-react": "^5.1.0",
    "babel-loader": "^10.0.0",
    "css-loader": "^7.1.2",
    "fast-check": "^4.3.0",
    "html-webpack-plugin": "^5.6.4",
    "husky": "^8.0.0",
    "lint-staged": "^16.2.6",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "style-loader": "^4.0.0",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.4",
    "webpack": "^5.102.1",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "^2.2.0",
    "zod": "^4.1.12"
  }
}
